<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_base"
    android:background="@color/background">

    <!-- Прогресс изучения -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_xl">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Прогресс:"
            android:textAppearance="@style/TextAppearanceBody2" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/10"
            android:textAppearance="@style/TextAppearanceBody2"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Карточка слова -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardWord"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        style="@style/Widget.Grable.Card.Base">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_2xl"
            android:gravity="center">

            <!-- Иностранное слово -->
            <TextView
                android:id="@+id/tvForeignWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textSize="@dimen/text_3xl"
                android:textAppearance="@style/TextAppearanceHeadline1"
                android:layout_marginBottom="@dimen/spacing_base" />

            <!-- Транскрипция -->
            <TextView
                android:id="@+id/tvTranscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/həˈləʊ/"
                android:textAppearance="@style/TextAppearanceBody1"
                android:layout_marginBottom="@dimen/spacing_xl" />

            <!-- Перевод (скрыт по умолчанию) -->
            <TextView
                android:id="@+id/tvTranslation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Привет"
                android:textSize="@dimen/text_xl"
                android:textColor="@color/primary"
                android:textAppearance="@style/TextAppearanceHeadline3"
                android:visibility="gone" />

            <!-- Аудио кнопка -->
            <ImageButton
                android:id="@+id/btnAudio"
                android:layout_width="@dimen/icon_xl"
                android:layout_height="@dimen/icon_xl"
                android:layout_marginTop="@dimen/spacing_xl"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/learn_play_sound"
                app:tint="@color/primary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Подсказка -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/learn_tap_to_card"
        android:textAppearance="@style/TextAppearanceBody2Secondary"
        android:gravity="center"
        android:layout_marginBottom="@dimen/spacing_2xl" />

    <!-- Кнопки навигации -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Кнопка "Предыдущее" -->
        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:text="@string/learn_previous"
            style="@style/Widget.Grable.Button.Secondary" />

        <!-- Кнопка "Знаю/Не знаю" -->
        <Button
            android:id="@+id/btnKnow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:layout_marginStart="@dimen/spacing_sm"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:text="@string/learn_know"
            style="@style/Widget.Grable.Button.Primary" />

        <!-- Кнопка "Следующее" -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_sm"
            android:text="@string/learn_next"
            style="@style/Widget.Grable.Button.Secondary" />

    </LinearLayout>

</LinearLayout>