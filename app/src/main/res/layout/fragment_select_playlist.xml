<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Shimmer skeleton -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/playlist_skeleton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_base">

            <!-- Skeleton header -->
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xl"
                android:background="@drawable/bg_skeleton_rounded"
                android:minHeight="32dp" />

            <!-- Skeleton grid -->
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:columnCount="2"
                app:rowCount="4">

                <!-- Skeleton cards -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_sm"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardBackgroundColor="@color/skeleton_base"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding"
                        android:gravity="center">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:background="@drawable/bg_skeleton_rounded"
                            android:layout_marginBottom="@dimen/spacing_xs" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@drawable/bg_skeleton_rounded" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_sm"
                    app:layout_column="1"
                    app:layout_row="0"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardBackgroundColor="@color/skeleton_base"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding"
                        android:gravity="center">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:background="@drawable/bg_skeleton_rounded"
                            android:layout_marginBottom="@dimen/spacing_xs" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@drawable/bg_skeleton_rounded" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_sm"
                    app:layout_column="0"
                    app:layout_row="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardBackgroundColor="@color/skeleton_base"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding"
                        android:gravity="center">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:background="@drawable/bg_skeleton_rounded"
                            android:layout_marginBottom="@dimen/spacing_xs" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@drawable/bg_skeleton_rounded" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_sm"
                    app:layout_column="1"
                    app:layout_row="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardBackgroundColor="@color/skeleton_base"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding"
                        android:gravity="center">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:background="@drawable/bg_skeleton_rounded"
                            android:layout_marginBottom="@dimen/spacing_xs" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@drawable/bg_skeleton_rounded" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.gridlayout.widget.GridLayout>

            <!-- Skeleton button -->
            <View
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="@dimen/spacing_base"
                android:background="@drawable/bg_skeleton_rounded" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Content group -->
    <LinearLayout
        android:id="@+id/content_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/page_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/categories"
            android:textAppearance="@style/TextAppearanceHeadline3"
            android:padding="@dimen/spacing_base"
            android:gravity="center" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlist_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/spacing_base"
            tools:listitem="@layout/item_playlist" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_base"
            android:text="@string/back"
            style="@style/Widget.Grable.Button.Primary" />

    </LinearLayout>

</FrameLayout>
