<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_surface"
    android:fillViewport="true"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="40dp">

        <!-- Header -->
        <include
            android:id="@+id/header"
            layout="@layout/layout_header"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_title"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/main_subtitle"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/review_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_action_card"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/repeat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_repeat_title"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/repeat_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/action_repeat_desc"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/accent_primary"
                android:text="@string/action_repeat_cta"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/collection_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_action_card"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/collection_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_collection_title"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/collection_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/action_collection_desc"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/accent_secondary"
                android:text="@string/action_collection_cta"
                android:textAllCaps="false"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/categories_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/categories_title"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categories_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/categories_hint"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/categories_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:alignmentMode="alignMargins"
            app:columnCount="2"
            app:columnOrderPreserved="false"
            app:rowOrderPreserved="false"
            app:useDefaultMargins="false">

            <TextView
                android:id="@+id/category_food"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_category_chip"
                android:gravity="center_vertical"
                android:text="@string/category_food"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                app:layout_columnWeight="1" />

            <TextView
                android:id="@+id/category_medicine"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_category_chip"
                android:gravity="center_vertical"
                android:text="@string/category_medicine"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                app:layout_columnWeight="1" />

            <TextView
                android:id="@+id/category_b2"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_category_chip"
                android:gravity="center_vertical"
                android:text="@string/category_b2"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                app:layout_columnWeight="1" />

            <TextView
                android:id="@+id/category_c1"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_category_chip"
                android:gravity="center_vertical"
                android:text="@string/category_c1"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                app:layout_columnWeight="1" />
        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/button_add_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/accent_primary"
            android:text="@string/add_categories_cta"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- Footer -->
        <include
            android:id="@+id/footer"
            layout="@layout/layout_footer" />

    </LinearLayout>



</androidx.core.widget.NestedScrollView>
