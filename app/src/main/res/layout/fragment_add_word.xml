<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_base"
    android:id="@+id/scrollView"
    android:fillViewport="true"
    android:paddingTop="@dimen/spacing_xl"
    android:background="@color/background"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Нашли новое слово? Добавьте его в свой словарь для заучивания!"
            android:textAlignment="center"
            android:gravity="center"
            style="@style/TextAppearanceHeadline3"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_base"
            style="@style/Widget.Grable.Card.Base">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Слово на иностранном">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputWord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:hint="Транскрипция (не обязательно)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTranscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:hint="Перевод">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTranslation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!---<ImageView
            android:id="@+id/imageExample"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/spacing_base"
            /> -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_base"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:text="+ Добавить пример использования"
            style="@style/Widget.Grable.Button.Secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:padding="@dimen/spacing_md"
            android:text="ДОБАВИТЬ СЛОВО"
            style="@style/Widget.Grable.Button.Primary" />

    </LinearLayout>
</ScrollView>