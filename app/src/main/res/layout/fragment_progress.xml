<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_base"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок и выбор периода -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_base">

            <TextView
                android:id="@+id/tvPeriodTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Статистика"
                style="@style/TextAppearanceHeadline3"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background" />

        </LinearLayout>

        <!-- Период -->
        <TextView
            android:id="@+id/tvPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Период: 7 дней"
            style="@style/TextAppearanceBody1"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <!-- График дней -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Слова по дням:"
            style="@style/TextAppearanceBody1"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="@dimen/spacing_xl" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDays"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/spacing_xl" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="@dimen/spacing_xl" />

        <!-- Текущее обучение -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заучивается сейчас: 0"
            style="@style/TextAppearanceHeadline3"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_base" />

        <!-- Общая статистика -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Всего за период"
            style="@style/TextAppearanceBody1"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_base" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStatistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>