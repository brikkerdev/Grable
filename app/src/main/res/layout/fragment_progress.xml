<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_base"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Прогресс бар загрузки -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="32dp"
                android:visibility="gone" />

            <!-- Контент -->
            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Заголовок и выбор периода -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_base">

                    <TextView
                        android:id="@+id/tvPeriodTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Статистика"
                        style="@style/TextAppearanceHeadline3"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerPeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Период -->
                <TextView
                    android:id="@+id/tvPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Период: 7 дней"
                    style="@style/TextAppearanceBody1"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <!-- График -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="@dimen/spacing_xl" />

                <TextView
                    android:id="@+id/emptyChartText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Нет данных для отображения"
                    android:textAlignment="center"
                    android:layout_marginVertical="32dp"
                    android:visibility="gone"
                    style="@style/TextAppearanceBody2" />

                <!-- Дни в виде списка -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Детали по дням:"
                    style="@style/TextAppearanceBody1"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xl" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginBottom="@dimen/spacing_xl" />

                <!-- Текущее обучение -->
                <TextView
                    android:id="@+id/tvLearningNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Заучивается сейчас: 0"
                    style="@style/TextAppearanceHeadline3"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_base" />

                <!-- Общая статистика -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Всего за период"
                    style="@style/TextAppearanceBody1"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_base" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvStatistics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Тестовые кнопки (можно удалить) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_xl">

                    <Button
                        android:id="@+id/buttonAddWord"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+ Новое слово"
                        android:layout_marginEnd="@dimen/spacing_sm" />

                    <Button
                        android:id="@+id/buttonMarkKnown"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="✓ Выучено"
                        android:layout_marginEnd="@dimen/spacing_sm" />

                    <Button
                        android:id="@+id/buttonAddRepeat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="↻ Повторить" />

                </LinearLayout>

            </LinearLayout>

            <!-- Ошибка -->
            <LinearLayout
                android:id="@+id/errorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Произошла ошибка"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp"
                    style="@style/TextAppearanceBody1" />

                <Button
                    android:id="@+id/buttonRetry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Повторить" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>