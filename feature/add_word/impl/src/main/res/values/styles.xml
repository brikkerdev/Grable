<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Add Word Feature Styles -->
    <style name="Widget.Grable.AddWord.ScrollView" parent="android:Widget">
        <item name="android:background">@color/background</item>
        <item name="android:padding">@dimen/spacing_base</item>
        <item name="android:paddingTop">@dimen/spacing_xl</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.Grable.AddWord.Title" parent="TextAppearanceHeadline3">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.Grable.AddWord.Card" parent="Widget.Grable.Card.Base" />

    <style name="Widget.Grable.AddWord.Card.Content" parent="Widget.Grable.Layout">
        <item name="android:padding">@dimen/card_padding</item>
    </style>

    <style name="Widget.Grable.AddWord.ContentContainer" parent="Widget.Grable.Layout">
        <item name="android:paddingTop">@dimen/spacing_xl</item>
        <item name="android:paddingBottom">@dimen/spacing_base</item>
        <item name="android:paddingStart">@dimen/spacing_base</item>
        <item name="android:paddingEnd">@dimen/spacing_base</item>
    </style>

    <style name="Widget.Grable.AddWord.Image" parent="android:Widget">
        <item name="android:layout_height">@dimen/image_example_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Widget.Grable.AddWord.RecyclerView" parent="android:Widget" />

    <style name="Widget.Grable.AddWord.Button.AddExample" parent="Widget.Grable.Button.Secondary" />

    <style name="Widget.Grable.AddWord.Button.Add" parent="Widget.Grable.Button.Primary">
        <item name="android:padding">@dimen/spacing_md</item>
    </style>

    <!-- Example Item Styles -->
    <style name="Widget.Grable.Example.Card" parent="Widget.Grable.Card.Base">
        <item name="android:layout_marginBottom">@dimen/example_item_spacing</item>
    </style>

    <style name="Widget.Grable.Example.Content" parent="Widget.Grable.Layout">
        <item name="android:padding">@dimen/spacing_base</item>
    </style>

    <style name="Widget.Grable.Example.Text.English" parent="TextAppearanceBody1">
        <item name="android:textSize">@dimen/text_lg</item>
    </style>

    <style name="Widget.Grable.Example.Text.Russian" parent="TextAppearanceBody1">
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Widget.Grable.Example.EditButton" parent="android:Widget">
        <item name="android:layout_width">@dimen/icon_md</item>
        <item name="android:layout_height">@dimen/icon_md</item>
        <item name="android:padding">@dimen/spacing_xs</item>
    </style>

    <!-- Dialog Add Example Styles -->
    <style name="Widget.Grable.Dialog.AddExample.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radius_lg</item>
        <item name="cardElevation">@dimen/card_elevation_sm</item>
    </style>

    <style name="Widget.Grable.Dialog.AddExample.Content" parent="Widget.Grable.Layout">
        <item name="android:padding">@dimen/spacing_base</item>
    </style>

    <style name="Widget.Grable.Dialog.AddExample.Title" parent="TextAppearanceHeadline3">
        <item name="android:textStyle">bold</item>
    </style>
</resources>

