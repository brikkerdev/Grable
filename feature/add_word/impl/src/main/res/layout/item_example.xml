<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.Grable.Example.Card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Grable.Example.Content">

        <TextView
            android:id="@+id/tvExampleEn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example text"
            style="@style/Widget.Grable.Example.Text.English"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEditExample" />

        <TextView
            android:id="@+id/tvExampleRu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Перевод"
            style="@style/Widget.Grable.Example.Text.Russian"
            app:layout_constraintTop_toBottomOf="@id/tvExampleEn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEditExample"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/btnEditExample"
            android:src="@drawable/ic_edit_example"
            android:contentDescription="Редактировать пример"
            style="@style/Widget.Grable.Example.EditButton"
            app:tint="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
