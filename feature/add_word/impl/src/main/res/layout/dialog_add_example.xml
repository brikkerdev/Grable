<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_base">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.Grable.Dialog.AddExample.Card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Grable.Dialog.AddExample.Content">

            <TextView
                android:id="@+id/exampleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пример"
                style="@style/Widget.Grable.Dialog.AddExample.Title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/inputLayoutExampleEn" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutExampleEn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Предложение на английском"
                app:layout_constraintTop_toBottomOf="@id/exampleTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/inputLayoutExampleRu">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputExampleEn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Grable.TextInput.EditText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutExampleRu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Перевод"
                app:layout_constraintTop_toBottomOf="@id/inputLayoutExampleEn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputExampleRu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Grable.TextInput.EditText" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
