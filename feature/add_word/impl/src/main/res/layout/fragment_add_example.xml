<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/spacing_base">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardExample"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.Grable.Card.Base"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Grable.AddWord.Card.Content">

            <TextView
                android:id="@+id/exampleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пример"
                style="@style/TextAppearanceHeadline3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/inputLayoutExampleEn" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutExampleEn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Предложение"
                app:layout_constraintTop_toBottomOf="@id/exampleTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/inputLayoutExampleRu">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputExampleEn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutExampleRu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Перевод"
                app:layout_constraintTop_toBottomOf="@id/inputLayoutExampleEn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputExampleRu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
