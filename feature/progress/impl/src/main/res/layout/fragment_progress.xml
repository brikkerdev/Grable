<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_base"
        android:background="@color/background"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Прогресс бар загрузки -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Grable.ProgressBar"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Контент -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contentLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressBar">

                <!-- Заголовок и выбор периода -->
                <TextView
                    android:id="@+id/tvPeriodTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_title"
                    android:textAppearance="@style/TextAppearanceHeadline3"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_base"
                    app:layout_constraintEnd_toStartOf="@+id/spinnerPeriod"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnerPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Период -->
                <TextView
                    android:id="@+id/tvPeriod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_period"
                    android:textAppearance="@style/TextAppearanceBody1"
                    android:layout_marginTop="@dimen/spacing_base"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPeriodTitle" />

                <!-- График -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/chart_height"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:layout_marginBottom="@dimen/spacing_xl"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPeriod" />

                <TextView
                    android:id="@+id/emptyChartText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_no_data"
                    android:textAlignment="center"
                    android:layout_marginVertical="@dimen/chart_margin_vertical"
                    android:visibility="gone"
                    android:textAppearance="@style/TextAppearanceBody2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPeriod" />

                <!-- Дни в виде списка -->
                <TextView
                    android:id="@+id/tvDaysTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_days_details"
                    android:textAppearance="@style/TextAppearanceBody1"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/spacing_xl"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/barChart" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDays"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xl"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDaysTitle" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider"
                    android:layout_marginBottom="@dimen/spacing_xl"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvDays" />

                <!-- Текущее обучение -->
                <TextView
                    android:id="@+id/tvLearningNow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_learning_now"
                    android:textAppearance="@style/TextAppearanceHeadline3"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_base"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider" />

                <!-- Общая статистика -->
                <TextView
                    android:id="@+id/tvTotalPeriod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_total_period"
                    android:textAppearance="@style/TextAppearanceBody1"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_base"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLearningNow" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvStatistics"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_base"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTotalPeriod" />

                <!-- Тестовые кнопки -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAddWord"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_add_word"
                    style="@style/Widget.Grable.Button.Secondary"
                    android:layout_marginTop="@dimen/spacing_xl"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    app:layout_constraintEnd_toStartOf="@+id/buttonMarkKnown"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvStatistics"
                    app:layout_constraintWidth_percent="0.33" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonMarkKnown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_mark_known"
                    style="@style/Widget.Grable.Button.Secondary"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    app:layout_constraintEnd_toStartOf="@+id/buttonAddRepeat"
                    app:layout_constraintStart_toEndOf="@+id/buttonAddWord"
                    app:layout_constraintTop_toTopOf="@+id/buttonAddWord"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonAddWord"
                    app:layout_constraintWidth_percent="0.33" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAddRepeat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_add_repeat"
                    style="@style/Widget.Grable.Button.Secondary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/buttonMarkKnown"
                    app:layout_constraintTop_toTopOf="@+id/buttonAddWord"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonAddWord"
                    app:layout_constraintWidth_percent="0.33" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Ошибка -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/errorLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.Grable.Layout.ErrorContainer"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/textError"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_error"
                    android:textAlignment="center"
                    style="@style/Widget.Grable.TextView.Error"
                    android:textAppearance="@style/TextAppearanceBody1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonRetry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_retry"
                    style="@style/Widget.Grable.Button.Primary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textError" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
