<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_screen_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/header"
            layout="@layout/layout_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/main_title"
            android:textAppearance="@style/TextAppearanceHeadline2"
            android:paddingHorizontal="@dimen/spacing_xl"
            android:paddingTop="@dimen/spacing_2xl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/main_subtitle"
            android:textAppearance="@style/TextAppearanceBody1Secondary"
            android:layout_marginTop="@dimen/spacing_xs"
            android:paddingHorizontal="@dimen/spacing_xl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <!-- Повторение изученных слов -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/review_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Grable.Card.Base"
            android:layout_marginTop="@dimen/spacing_2xl"
            android:layout_marginHorizontal="@dimen/spacing_xl"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="@dimen/card_elevation_sm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_xl">

                <TextView
                    android:id="@+id/repeat_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/action_repeat_title"
                    android:textAppearance="@style/TextAppearanceHeadline3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/repeat_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/action_repeat_desc"
                    android:textAppearance="@style/TextAppearanceBody2Secondary"
                    android:layout_marginTop="@dimen/spacing_sm"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/repeat_title" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_repeat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/action_repeat_cta"
                    style="@style/Widget.Grable.Button.Primary"
                    android:layout_marginTop="@dimen/spacing_base"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/repeat_desc" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Выбор подборки для изучения -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/collection_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Grable.Card.Base"
            android:layout_marginTop="@dimen/spacing_base"
            android:layout_marginHorizontal="@dimen/spacing_xl"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="@dimen/card_elevation_sm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_container">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_xl">

                <TextView
                    android:id="@+id/collection_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/action_collection_title"
                    android:textAppearance="@style/TextAppearanceHeadline3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/collection_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/action_collection_desc"
                    android:textAppearance="@style/TextAppearanceBody2Secondary"
                    android:layout_marginTop="@dimen/spacing_sm"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/collection_title" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_collection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/action_collection_cta"
                    style="@style/Widget.Grable.Button.Primary"
                    android:layout_marginTop="@dimen/spacing_base"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/collection_desc" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Добавить новое слово -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/add_word_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Grable.Card.Base"
            android:layout_marginTop="@dimen/spacing_base"
            android:layout_marginHorizontal="@dimen/spacing_xl"
            android:layout_marginBottom="@dimen/spacing_3xl"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="@dimen/card_elevation_sm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collection_container">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_xl">

                <TextView
                    android:id="@+id/add_word_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/action_add_word_title"
                    android:textAppearance="@style/TextAppearanceHeadline3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/add_word_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/action_add_word_desc"
                    android:textAppearance="@style/TextAppearanceBody2Secondary"
                    android:layout_marginTop="@dimen/spacing_sm"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_word_title" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_add_word"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/action_add_word_cta"
                    style="@style/Widget.Grable.Button.Primary"
                    android:layout_marginTop="@dimen/spacing_base"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_word_desc" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
